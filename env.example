# Application Settings
ENVIRONMENT=development
DEBUG=true

# API Keys
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Database Settings
DATABASE_URL=postgresql://user:password@localhost/trend_following

# MCP Server Settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_DEBUG=true

# Trading Settings
DEFAULT_RISK_LEVEL=moderate
DEFAULT_POSITION_SIZE=0.1
MAX_POSITION_SIZE=0.25

# Technical Analysis Settings
DEFAULT_LOOKBACK_PERIOD=252
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD=2

# Risk Management Settings
STOP_LOSS_MULTIPLIER=1.5
TAKE_PROFIT_MULTIPLIER=2.0
MAX_DRAWDOWN_LIMIT=0.15

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/trend_following_mcp.log

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300
